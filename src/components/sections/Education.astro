---
import Section from "@/layouts/Section.astro";
import { education } from "@/cv";
---

<Section title="EducaciÃ³n">
    <ul>
        {
            education.map(({
                institution,
                area,
                startDate,
                endDate
            })=> {
                const years = `${startDate} - ${endDate}`;
                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>
                                        {institution}
                                    </h3>
                                    <h4>
                                        {area}
  
                                    </h4>
                                </div>
                                <time>{years}</time>
                            </header>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 600;
        font: bold;
        color: #111;
    }

    article h4 {
        color: #222;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time{
        color: #666;
        font-size: 0.85rem;
    }
</style>
