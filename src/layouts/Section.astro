---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<section>
    {title && <h2>{title}</h2>}
    <hr class="divider">
    <slot />
</section>

<style>
    section {
        max-width: 700px;
        margin: 0 auto 48px;
    }
    h2 {
        font-weight: 700;
        line-height: 1.5;
        font-size: 1.5rem;
    }
    .divider {
            border: none;
            border-top: 1px solid black; 
            margin: 15px 0; 
        }
</style>
